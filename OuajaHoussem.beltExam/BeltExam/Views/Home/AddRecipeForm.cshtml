@model Recipe

<div class="d-flex justify-content-between mt-5 fs-4 ">
    <div class="d-flex gap-5">
        <a href="/recipes">5 Ingredients</a>
        <a href="recipes/new">Add a Recipe</a>
    </div>
    <div>
        <a asp-action="Logout">Logout</a>
    </div>
</div>
<hr>

<h1>Add a Recipe</h1>

<form asp-action="AddRecipe">
    @* <input type="hidden" asp-for="UserId" value="@currentUserId"> *@
    <div class="text-center d-flex justify-content-evenly fs-5">

        <div class=" flex-2 mt-3 col-4">
            <div class="mb-3 ">
                <label class="form-label  " asp-for="Title"> Recipe Title</label>
                <input class="form-control " asp-for="Title">
                <span class="text-danger " asp-validation-for="Title"></span>
            </div>
            <div class="mb-3 ">
                <label class="form-label  " asp-for="IngredientOne"></label>
                <input class="form-control " asp-for="IngredientOne">
                <span class="text-danger " asp-validation-for="IngredientOne"></span>
            </div>
            <div class="mb-3">
                <label class="form-label  " asp-for="IngredientTwo"></label>
                <input class="form-control " asp-for="IngredientTwo">
                <span class="text-danger " asp-validation-for="IngredientTwo"></span>
            </div>
            <div class="mb-3">
                <label class="form-label  " asp-for="IngredientThree"></label>
                <input class="form-control " asp-for="IngredientThree">
                <span class="text-danger " asp-validation-for="IngredientThree"></span>
            </div>
            <div class="mb-3">
                <label class="form-label  " asp-for="IngredientFour"></label>
                <input class="form-control " asp-for="IngredientFour">
                <span class="text-danger " asp-validation-for="IngredientFour"></span>
            </div>
            <div class="mb-3">
                <label class="form-label  " asp-for="IngredientFive"></label>
                <input class="form-control " asp-for="IngredientFive">
                <span class="text-danger " asp-validation-for="IngredientFive"></span>
            </div>
        </div>
        <div class=" mt-3">

            <div class="mb-3">
                <label class="form-label  " asp-for="Introductions"></label>
                <textarea class="form-control "  cols="30" rows="5" asp-for="Introductions"></textarea>
                <span class="text-danger " asp-validation-for="Introductions"></span>
            </div>
            <div class="d-flex gap-3">

                <div class="mb-3">
                    <label class="form-check-label " asp-for="Vegetarian"></label>
                    <input class="form-check-input " asp-for="Vegetarian">
                </div>
                <div class="mb-3">
                    <label class="form-check-label " asp-for="GlutenFree"></label>
                    <input class="form-check-input " asp-for="GlutenFree">
                </div>
            </div>
            <div>
                <button class="btn btn-info">Add Recipe</button>
            </div>
        </div>
    </div>
</form>