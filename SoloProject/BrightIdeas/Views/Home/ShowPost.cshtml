@model MyViewModel


<div class="d-flex flex-row justify-content-end p-1 gap-4">
    <a href="/bright_ideas" class="fs-4">Bright Ideas</a>
    <a asp-action="Logout" class="fs-4"> Logout </a>
</div>

<div class="d-flex mt-5 justify-content-evenly col-6">

    <div class="gap-1 d-flex col-1">

        <a asp-action="ShowUser" asp-route-userId=@Model.OnePost.UserId
            class="text-capitalize fs-4">@Model.OnePost.Poster.Alias </a>

        <span class="fs-5 p-1">says: </span>
    </div>
    <div class="card p-2" style="width: 18rem;">
        <div>

            <p class="card-text">@Model.OnePost.Idea</p>
        </div>
    </div>
</div>
<div class="mt-5 col-5">
    <h1>People who liked this post:</h1>
    <table class="table table-striped mt-5 text-capitalize fs-5">
        <tr >
            <th>Alias</th>
            <th>Name</th>
        </tr>
        @foreach(var g in Model.OnePost.UserWhoLiked)
        {
            <tr>
                <td><a asp-action="ShowUser" asp-route-userId=@g.UserId class="text-capitalize">@g.UserLikes.Alias </a></td>
                <td>@g.UserLikes.Name</td>
            </tr>
        }
    </table>
</div>
