@model Chef


<div lass="text-center ">
    <div class="mt-5 mx-auto col-5 fs-4">
        <a href="/">Chefs</a>
        |
        <a href="/dishes">Dishes</a>
        |
        <a href="/chefs/new">Add a Chef</a>
        |
        <a href="/dishes/new">Add a Dish</a>
    </div>
    <h1 class="mt-5 mx-auto col-3 "> Add a Chef</h1>
    <hr>
    <div class="mt-5 mx-auto col-5 fs-5">
        <form asp-action="AddChef">
            <div class="form-group">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" class="form-control">
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="Submit" value="Add Chef" class="btn btn-info mt-3">
            </div>
        </form>
        
    </div>